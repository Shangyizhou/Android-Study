<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影部分 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 阴影颜色 -->
            <solid android:color="@color/black" />
            <!-- 圆角大小 -->
            <corners android:radius="8dp" />
            <!-- 阴影大小 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
    <!-- 填充部分 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#fff" />
            <!-- 圆角大小 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>