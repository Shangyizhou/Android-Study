<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#D6D6D6" /> <!--Shadow color-->
            <corners android:radius="5dp" /> <!--Shadow corner radius-->
        </shape>
    </item>
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!--Background color-->
            <corners android:radius="5dp" /> <!--Corner radius-->
        </shape>
    </item>
</layer-list>