<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/slide_bg_content_bg"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/title_pic_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/title_pic"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_pic_cardview"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/title_pic_cardview"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:padding="3dp"
                android:layout_alignParentBottom="true"
                android:text="4月12日15:30" />


            <!--            <TextView-->
            <!--                android:id="@+id/descr_text"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="8sp"-->
            <!--                android:maxLines="2"-->
            <!--                android:ellipsize="end"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:layout_toLeftOf="@+id/title_pic"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_alignParentLeft="true"-->
            <!--                android:layout_alignBottom="@+id/title_pic"-->
            <!--                />-->
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
