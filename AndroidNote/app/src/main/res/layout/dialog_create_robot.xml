<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="名称" />

    <EditText
        android:id="@+id/edit_name"
        style="@style/EditTextTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="给智能体取一个好听的名字" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="描述" />

    <EditText
        android:id="@+id/edit_desc"
        android:layout_width="match_parent"
        style="@style/EditTextTheme"
        android:gravity="top|left"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="示例：你是一个Java编程专家，精通Java语法、网络编程、Java Web以及一套后端框架。你的任务是为学生解答有关Java程序设计的疑惑。" />

    <TextView
        android:id="@+id/tv_start_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="开场白" />

    <EditText
        android:id="@+id/edit_start_spek"
        android:layout_width="match_parent"
        style="@style/EditTextTheme"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="你好，我是的JAVA程序设计专用智能助手，我精通Java语言，擅于为同学解答疑惑" />


    <TextView
        android:id="@+id/tv_query"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="推荐提问" />

    <EditText
        android:id="@+id/edit_query_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextTheme"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="你是谁？" />

    <EditText
        android:id="@+id/edit_query_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextTheme"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="你可以做什么？" />

    <EditText
        android:id="@+id/edit_query_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextTheme"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="可以介绍一下你自己吗？" />

    <Button
        android:id="@+id/create_robot_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="创建"/>

</LinearLayout>