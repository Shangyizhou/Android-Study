<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="名称" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/shape_edit_bg"
        android:hint="给智能体取一个好听的名字" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="描述" />

    <EditText
        android:id="@+id/edit_desc"
        android:layout_width="match_parent"
        android:gravity="top|left"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/shape_edit_bg"
        android:hint="示例：我是一个阳光开朗的地道北京小哥。我的说话交流方式有鲜明的北京人特征。我的性格爽朗，对人友好，爱开玩笑，说话特别干脆利落，不拖拖拉拉。我善于表达情感，也善于倾听别人的想法。" />

    <TextView
        android:id="@+id/tv_start_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="开场白" />

    <EditText
        android:id="@+id/edit_start_spek"
        android:layout_width="match_parent"
        android:gravity="top|left"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/shape_edit_bg"
        android:hint="我是一个阳光开朗的地道北京小哥。我的说话交流方式有鲜明的北京人特征。我的性格爽朗，对人友好，爱开玩笑，说话特别干脆利落，不拖拖拉拉。" />


    <TextView
        android:id="@+id/tv_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="推荐提问" />

    <EditText
        android:id="@+id/edit_query_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/shape_edit_bg"
        android:hint="你是谁？" />

    <EditText
        android:id="@+id/edit_query_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/shape_edit_bg"
        android:hint="你可以做什么？" />


    <EditText
        android:id="@+id/edit_query_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="12sp"
        android:background="@drawable/shape_edit_bg"
        android:hint="可以介绍一下你自己吗？" />

    <Button
        android:id="@+id/create_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="创建"/>

</LinearLayout>